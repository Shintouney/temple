.page-header
  .row
    .col-sm-12
      %h1
        = t('.title')
= render 'form'
#cgv-modal.modal.fade{ role: 'dialog', tabindex: '-1', aria: {labelledby: t('.modal_cgv_title'), hidden: true} }
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', data: { dismiss: 'modal'} }
          &times;
        %h3.modal-title
          = t('.modal_cgv_title')
      .modal-body
        = render 'cgv'
      .modal-footer
        %button.btn.btn-primary{ type: 'button', data: { dismiss: 'modal'}}
          = t('.close')
#rules-modal.modal.fade{ role: 'dialog', tabindex: '-1', aria: {labelledby: t('.modal_rules_title'), hidden: true} }
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', data: { dismiss: 'modal'} }
          &times;
        %h3.modal-title
          = t('.modal_rules_title')
      .modal-body
        = render 'rules'
      .modal-footer
        %button.btn.btn-brown{ type: 'button', data: { dismiss: 'modal'}}
          = t('.close')
