.modal-header
  %a{ type: 'button', class: 'close', data: { dismiss: 'modal'} }
    &times;
  %h3.modal-title
    = t('.title')
  .modal-body
    %h4
      = t('.invitation_sent')
  .modal-footer
    = button_tag t('.close'), id: 'invitation_close', class: 'btn btn-default', data: { dismiss: 'modal'}, type: 'button'
