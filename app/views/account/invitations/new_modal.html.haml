.modal-header
  %a{ type: 'button', class: 'close', data: { dismiss: 'modal'} }
    &times;
  %h3.modal-title
    = t('.title')
= simple_form_for @invitation_form, url: account_invitations_path, remote: true, html: {class: 'remote_invitation_form'} do |form|
  .modal-body
    = render partial: 'form', object: form
  .modal-footer
    = form.button :button, t('.cancel'), id: 'invitation_cancel', class: 'btn btn-default', data: { dismiss: 'modal'}, type: 'button'
    = form.submit t('.submit'), id: 'invitation_submit', class: 'btn btn-brown'
