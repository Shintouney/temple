%h4.headline.m-top-none
  = t('.title')
.row
  .col-sm-12.col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %em.far.fa-credit-card
          = t('.your_credit_card')
      .panel-body
        %dl.dl-horizontal.m-bottom-none
          %dt
            = t('.credit_card_owner_name')
          %dd
            = @credit_card.owner_name
          %dt
            = t('number', scope: 'activerecord.attributes.active_merchant.billing.credit_card')
          %dd
            = @credit_card.number
          %dt
            = t('.credit_card_expiration_date')
          %dd
            = @credit_card.expiration_date
      .panel-footer.text-right
        = link_to edit_account_credit_card_path, id: 'edit_credit_card', class: 'btn btn-primary btn-sm' do
          %em.fa.fa-edit
          = t('.edit')
