.row
  .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    = image_tag 'logo-temple-login.jpg', class: 'fadeInUp animation-delay1 login-logo'
    .panel.panel-brown
      .panel-heading
        %h3.panel-title
          = t('.instructions')
      = form_for @user_password_updater, url: password_path, html: { method: :put } do |form|
        .panel-body
          = flash_content(flash) if flash.any?
          .input-group
            %span.input-group-addon
              %em.fa.fa-lock
            = form.label :password, class: 'sr-only'
            = form.password_field :password, label: false, required: true, autofocus: true, placeholder: User.human_attribute_name(:password), class: 'form-control', autocomplete: 'off'
          %br
          .input-group
            %span.input-group-addon
              %em.fa.fa-lock
            = form.label :password_confirmation, class: 'sr-only'
            = form.password_field :password_confirmation, label: false, required: true, placeholder: User.human_attribute_name(:password_confirmation), class: 'form-control', autocomplete: 'off'
          = hidden_field_tag :token, @token
          .text-right.m-top-md
            = form.button t('.submit'), id: 'edit_password_submit', class: 'btn btn-brown'
